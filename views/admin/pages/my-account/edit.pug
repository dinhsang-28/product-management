extends ../../layout/default.pug 
include ../../mixin/alert.pug

block main
  if(role.permissions.includes("products-categogy_edit"))
    +alert-error(5000)
    +alert-success(5000)
    h1(class="mb-4") Cập Nhật Thông Tin Cá Nhân
    
    form(
      action=`${prefixAdmin}/my-account/edit/?_method=PATCH`
      method="POST"
      enctype="multipart/form-data"
    )
      div(class="form-group")
        label(for="fullname") Họ Tên*
        input(
          type="text"
          class="form-control"
          id="fullname"
          name="fullname"
          required
          value=user.fullname
        )
      div(class="form-group")
        label(for="email") Email *
        input(
          class="form-control textarea-mce"
          id="email"
          name="email"
          value=user.email
        )
      div(class="form-group")
        label(for="password") Mật Khẩu
        input(
          type="password"
          class="form-control"
          id="password"
          name="password"
        )
      div(class="form-group")
        label(for="phone") Số điện thoại
        input(
          class="form-control textarea-mce"
          id="phone"
          name="phone"
          value=user.phone
        )
      div(
        class="form-group"
        upload-image
        )
        label(for="avatar") Ảnh
        input(
          type="file"
          class="form-control-file"
          id="avatar"
          name="avatar"
          accept="image/*"
          upload-image-input
        )
        img(
          src= user.avatar
          upload-image-preview
          class="image-preview"
        )     
      div(
       class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Cập Nhật

    script(src="/admin/js/products.js") 