extends ../../layout/default.pug

block main
  if(role.permissions.includes("setting_view"))
    h1 Cài đặt chung
    
    form(
        action=`${prefixAdmin}/settings/gerenal?_method=PATCH`
        id="form-create-product"
        method="POST"
        enctype="multipart/form-data"
      )
        div(class="form-group")
          label(for="websiteName") Tên website
          input(
            type="text"
            class="form-control"
            id="websiteName"
            name="websiteName"
            value=( settingGerenal ?  settingGerenal.websiteName : "")
          )
        div(
          class="form-group"
          upload-image
          )
          label(for="logo") Logo
          input(
            type="file"
            class="form-control-file"
            id="logo"
            name="logo"
            accept="image/*"
            upload-image-input
          )
          img(
            src=( settingGerenal ?  settingGerenal.logo : "")
            upload-image-preview
            class="image-preview"
          )
        div(class="form-group")
          label(for="phone") Số điện thoại
          input(
            type="text"
            class="form-control"
            id="phone"
            name="phone"
            value=( settingGerenal ?  settingGerenal.phone : "")
          )
        div(class="form-group")
          label(for="address") Địa chỉ
          input(
            type="text"
            class="form-control"
            id="address"
            name="address"
            value=( settingGerenal ?  settingGerenal.address : "")
          )
        div(class="form-group")
          label(for="copyright") Copyright
          input(
            type="text"
            class="form-control"
            id="copyright"
            name="copyright"
            value=( settingGerenal ?  settingGerenal.copyright : "")
          )
        if(role.permissions.includes("setting_edit"))
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary"
            ) Cập nhật