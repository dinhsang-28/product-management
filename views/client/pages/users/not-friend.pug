extends ../../layouts/default.pug 
include ../../mixins/box-head.pug

block main
  
  .container.my-3
    include ../../partials/list-btn-users.pug
    .row 
      .col-12 
        +box-head("Danh Sách Người Dùng")

    .row 
      each user in users
        .col-6 
          div(class="box-user")
            div(class="inner-avatar")
              img(
                src=(user.avatar ? user.avatar :"https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQNL_ZnOTpXSvhf1UaK7beHey2BX42U6solRA&s")
                alt=user.fullname
              )
            div(class="inner-info")
              div(class="inner-name") #{user.fullname}
              div(class="inner-buttons")
                button(
                  class="btn btn-sm btn-primary mr-1"
                  btn-add-friend=user.id
                ) Kết Bạn
                button(
                  class="btn btn-sm btn-secondary mr-1"
                   btn-cancel-friend=user.id
                ) Huỷ

